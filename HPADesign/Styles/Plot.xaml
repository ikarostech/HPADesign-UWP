<UserControl
    x:Class="HPADesign.Styles.Plot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HPADesign.Styles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="700">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="550" />
            <ColumnDefinition Width="50" />
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height ="50"/>
            <RowDefinition Height ="280"/>
            <RowDefinition Height ="70"/>
        </Grid.RowDefinitions>
        
        <Rectangle Grid.Column="1" Grid.Row="1" Stroke="Gray"  />
        <!--
        <Line Stroke="Black" X1="100" X2="85" Y1="50" Y2="50"/>
        <Line Stroke="Black" X1="100" X2="85" Y1="120" Y2="120"/>
        <Line Stroke="Black" X1="100" X2="85" Y1="190" Y2="190"/>
        <Line Stroke="Black" X1="100" X2="85" Y1="260" Y2="260"/>
        <Line Stroke="Black" X1="100" X2="85" Y1="330" Y2="330"/>
-->
        <Polyline Grid.Column="1" Grid.Row="1" Points="{x:Bind Points.Value}"  Stroke="Blue"/>
    </Grid>
</UserControl>
